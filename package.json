{
  "name": "appium-cucumber-steps",
  "version": "1.0.0",
  "description": "Pre-built Cucumber step definitions for Appium mobile testing",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "appium-cucumber-init": "dist/cli/init.js"
  },
  "exports": {
    ".": "./dist/index.js",
    "./steps/*": "./dist/steps/*.js"
  },
  "scripts": {
    "build": "tsc",
    "prepare": "npm run build",
    "prepack": "node scripts/download-test-app.js",
    "postinstall": "node scripts/download-test-app.js || echo 'Optional: Test app download skipped'",
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "eslint src --ext .ts",
    "clean": "rm -rf dist"
  },
  "files": [
    "dist",
    "apps",
    "scripts/download-test-app.js",
    "test-scenarios",
    "README.md",
    "LICENSE"
  ],
  "keywords": [
    "appium",
    "cucumber",
    "bdd",
    "mobile",
    "testing",
    "automation",
    "webdriverio",
    "typescript"
  ],
  "author": "Enymiri Paschal Chetachi <paschal.enymiri@gmail.com>",
  "license": "MIT",
  "peerDependencies": {
    "appium": "^3.1.2",
    "@cucumber/cucumber": "^12.5.0"
  },
  "peerDependenciesMeta": {
    "appium": {
      "optional": true
    }
  },
  "dependencies": {
    "@wdio/appium-service": "^9.23.0",
    "@wdio/cli": "^9.23.0",
    "@wdio/cucumber-framework": "^9.23.2",
    "@wdio/globals": "^9.23.0",
    "@wdio/local-runner": "^9.23.0",
    "@wdio/spec-reporter": "^9.23.2",
    "ts-morph": "^27.0.2",
    "ts-node": "^1.7.1",
    "webdriverio": "^9.23.2"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^12.5.0",
    "@types/node": "^25.0.9",
    "@wdio/types": "^9.23.2",
    "typescript": "^5.9.3"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/qaPaschalE/appium-cucumber-steps.git"
  },
  "bugs": {
    "url": "https://github.com/qaPaschalE/appium-cucumber-steps/issues"
  },
  "homepage": "https://github.com/qaPaschalE/appium-cucumber-steps#readme"
}
